import time
name = "0"
health = 100
sword = "Ржавый меч"
shield = "Деревянный щит"
print ("...:Dungeon:...")
input("Для начала игры нажмите <Enter>\n")
name = input("Вы входите в подземелье, какое ваше имя?\n")
if name == "":
    name = input("Вы не ввели имя!\nПовторите попытку!\n")
    if name == "":
        print ("Игра окончена, вы не ввели имя.")
        time.sleep(99999)
print ("Итак,",name,", Вы вошли в подземелье\nУ вас в руках" ,sword, "и" ,shield)
